{% extends 'base.html.twig' %}

{% block title %}Gerer Livres{% endblock %}
  {%  block sliders %} {% endblock %}
{% block body %}
    <h1>Livres </h1>



   

 {% for livre in livres %}    
<div class="card" style="margin:10px;padding:10px;">
    <div class="card-horizontal" style="display: flex;flex: 1 1 auto;">
        <div class="img-square-wrapper">
            <img class="" src="{{ asset('uploads/images/' ~ livre.image) }} " alt="Cover" width="300" height="400">
        </div>
        <div class="card-body">
            <h4 class="card-title">{{ livre.titre }}</h4>
             Annee: <b> {{ livre.annee }} </b> </br>
            Prix: <b> {{ livre.prix }} </b> </br>
            Edition: <b> {{ livre.edition }} </b> </br>
            Categorie: <b> {{ livre.categorie.nom }} </b> </br>
           
              <a href="{{ path('livre_show', {'id': livre.id}) }}" class="btn btn-info">Show</a>
    <a href="{{ path('livre_edit', {'id': livre.id}) }}" class="btn btn-warning" >Edit</a>
        </div>
    </div>
  
</div>

  {% endfor %}




     
</br></br></br></br>
    <a href="{{ path('livre_new') }}" class="btn btn-secondary btn-lg btn-block">Create new</a>
{% endblock %}
