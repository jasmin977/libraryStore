{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}
  {%  block sliders %} {% endblock %}
{% block body %}
    <h1>Livre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ livre.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ livre.titre }}</td>
            </tr>
            <tr>
                <th>Annee</th>
                <td>{{ livre.annee }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ livre.prix }}</td>
            </tr>
            <tr>
                <th>Edition</th>
                <td>{{ livre.edition }}</td>
            </tr>
            <tr>
                <th>Categorie</th>
                <td>{{ livre.categorie.nom }}</td>
            </tr>
            
           
            
            <tr>
                <th>Image</th>
               <td><img src ="{{ asset('uploads/images/' ~ livre.image) }}"
   alt =""  width="100" height="100"></td>
            </tr>
        </tbody>
    </table>




 

    <a href="{{ path('livre_index') }}" class="btn btn-secondary">back to list</a>

    <a href="{{ path('livre_edit', {'id': livre.id}) }}" class="btn btn-warning">edit</a>

    {{ include('livre/_delete_form.html.twig') }}
{% endblock %}
